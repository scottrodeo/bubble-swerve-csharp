<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BubbleSwerve.MenuPanel">

    <!-- StackPanel is used to layout child elements in a horizontal row -->
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">

        <!-- Restart Game button with transparent background and blue text -->
        <Button Content="Restart Game"
                Margin="10"
                Click="RestartButton_Click"
                Background="Transparent"
                Foreground="Blue" />

        <!-- About button with similar styling -->
        <Button Content="About"
                Margin="10"
                Click="AboutButton_Click"
                Background="Transparent"
                Foreground="Blue" />
    </StackPanel>
</UserControl>
